@model Login
@{
    ViewData["Title"] = "Login";
}

<h1 class="display-4">Welcome to Most Common Bank of Australia Internet Banking</h1>
<div class="row grid-container">
    <div class="col-md-4 left">
        <form asp-action="Login">
            <div class="form-group">
                <label asp-for="LoginID" class="control-label"></label>
                <input asp-for="LoginID" class="form-control" />
                <span asp-validation-for="LoginID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password" class="control-label">Password</label>
                <input id="Password" name="Password" type="password" class="form-control"
                       data-val="true" data-val-required="The Password field is required." />
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
        </form>
    </div>

    <div class="right">
        <p>
            We are Australia's leading bank with more branches than there are towns and cities in Australia.
            Over our 100 year history our acquisitions of Federal Territory Bank and BankEast have enabled us to outgrow our
            main competitors The Pacific Eastern Banking Conglomerate and National New Zealand Bank. We hope you enjoy
            banking with us.
        </p>

        <p>What bank? We're every bank!</p>
    </div>
</div>



@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
