@model IBCustomerSite.ViewModels.TransferViewModel

@{ ViewData["Title"] = "Confirmation"; }

<h1>Confirm your transaction</h1>

<div>
    <h4>Customer</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SourceAccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SourceAccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DestinationAccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DestinationAccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>
    <form asp-action="TransferConfirmationSave">
        <input type="hidden" asp-for="Accounts" value=@Model.Accounts />
        <input type="hidden" asp-for="SourceAccountNumber" value=@Model.SourceAccountNumber />
        <input type="hidden" asp-for="DestinationAccountNumber" value=@Model.DestinationAccountNumber />
        <input type="hidden" asp-for="Amount" value=@Model.Amount />
        <input type="hidden" asp-for="Comment" value=@Model.Comment />
        <input type="submit" value="Confirm" class="btn btn-primary" />
    </form>
</div>

<div>
    <a asp-action="Index" asp-controller="Customer">Cancel</a>
</div>
