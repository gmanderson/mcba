@model IBCustomerSite.ViewModels.DepositViewModel

@{
    ViewData["Title"] = "Deposit";
}
<h1>Deposit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit">
            <div class="input-group">
                <label asp-for="Accounts" class="control-label">Select Account</label>
                <select name="Accounts">
                    @foreach (var item in Model.Accounts)
                    {
        <option value="@item.AccountNumber">@Html.DisplayFor(modelItem => item.AccountNumber)</option>}

                </select>

                <span asp-validation-for="Accounts" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* ReSharper disable once UnknownCssClass *@
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* ReSharper disable once UnknownCssClass *@
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
