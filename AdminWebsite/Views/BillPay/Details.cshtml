@model BillPayDto

@{ ViewData["Title"] = "BillPay Details"; }

<h1>BillPay Details for @Model.BillPayID</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BillPayID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillPayID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ScheduleTimeUtc)
        </dt>
        <dd class="col-sm-10">
            @Model.ScheduleTimeUtc.ToLocalTime()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Period)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Period == 'M')
            {<p>Monthly</p>}
            @if (Model.Period == 'Q')
            {<p>Quarterly</p>}
            @if (Model.Period == 'A')
            {<p>Annually</p>}
            @if (Model.Period == 'O')
            {<p>One-off</p>}
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsBlocked)
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsBlocked)
            {<p>BLOCKED</p>}
        </dd>
    </dl>
</div>
<div>
    <form asp-action="Block">
        <input type="hidden" asp-for="BillPayID" value=@Model.BillPayID />
        <input type="hidden" asp-for="BillPayID" value=@Model.AccountNumber />
        <input type="hidden" asp-for="BillPayID" value=@Model.Account />
        <input type="hidden" asp-for="BillPayID" value=@Model.Amount />
        <input type="hidden" asp-for="BillPayID" value=@Model.ScheduleTimeUtc />
        <input type="hidden" asp-for="BillPayID" value=@Model.Period />
        <input type="hidden" asp-for="BillPayID" value=@Model.IsBlocked />
        <input type="submit" asp-action="Block" asp-route-id="@Model.BillPayID" value="Block" class="btn btn-primary"/>
        <input type="submit" asp-action="Unblock" asp-route-id="@Model.BillPayID" value="Unblock" class="btn btn-primary"/>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </form>
</div>
